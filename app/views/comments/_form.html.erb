<!-- コメントフォーム -->
<div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
        <%= form_with url: [board, comment], model: comment, id: 'new-comment' do |f| %>
            <div class="form-group">
                <%= f.label :body %>
                <%= f.text_area :body, placeholder: Comment.human_attribute_name(:body), id: 'js-new-comment-body', rows: 4, class: 'form-control mb-3' %>
            </div>
            <%= f.submit t('.register'), class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>